<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/emptyTheBinRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/colourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your color is:"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="66dp" />

        <ImageView
            android:id="@+id/selectedColour"
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:layout_alignTop="@+id/colourLabel"
            android:layout_toEndOf="@+id/colourLabel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/selectedColour"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wasteContainerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/selectedColour"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/backToMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="95dp"
            android:onClick="onBackToMenuButton2Clicked"
            android:text="Back to Menu" />

    </RelativeLayout>
</LinearLayout>